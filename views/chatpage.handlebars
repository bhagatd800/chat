<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <script src='/js/angscript.js'></script>
<script src='/js/angular.min.js.map'></script>
<script src='/js/chatscript.js'></script>
  </head>
  <body ng-app='chat'  ng-controller='chatController' ng-init="getData()">

    <div>



    <table>
  <table class="table table-striped">
       <thead class="thead-inverse">

              <tr>
                <th>Name</th>
                <th>Action</th>

            </tr>

            </thead>

          <tbody>
    <tr ng-repeat="data in userData">
    <td>{[{data.username}]}</td>
    <td> <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" ng-click="getChatData(data._id)">Chat</button>
    </td>
    </tr>
    </tbody>
</table>

    </div>  
    
<div class="modal fade" id="myModal" role="dialog" >

            <div class="modal-dialog" " >

              <div class="modal-content">

                <div class="modal-header" style="background-color:green">

                  <button type="button" class="close" data-dismiss="modal">&times;</button>

                  <center> <h4 class="modal-title">Chat Box</h4></center>

                </div>

                <div class="modal-body" style="overflow-y: scroll;height: 350px";>
                      <table class="table table-striped">
        
                       <tbody>
                <tr ng-repeat="data in chatData">
                <td>{[{data.message}]}</td>
                
                </tr>
                </tbody>
            </table>

                </div>

                  <div class="modal-footer">

                       <div class="col-xs-8">
                        <input class="form-control" id="ex3" type="text" ng-model="data.message">
                        </div>
</br>
                        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="sendMessage()">Send</button>

                  </div>

              </div>








  </body>
</html>
